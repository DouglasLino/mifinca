@model mifinca.Models.producto

@{
    ViewBag.Title = "Delete";
}

<h2>Eliminar producto</h2>

<h3>¿Esta seguro eliminar el producto: @Html.DisplayFor(model => model.nombre_producto)?</h3>
<div>
    <p class="text-danger">La siguiente acción no se puede deshacer </p>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @*@Html.DisplayNameFor(model => model.foto_producto)*@Foto del producto
        </dt>

        <dd>
            @Html.DisplayFor(model => model.foto_producto)
        </dd>

        <dt>
            @*@Html.DisplayNameFor(model => model.nombre_producto)*@Nombre del producto
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nombre_producto)
        </dd>

        <dt>
            @*@Html.DisplayNameFor(model => model.descripcion)*@Descripción del producto
        </dt>

        <dd>
            @Html.DisplayFor(model => model.descripcion)
        </dd>

        <dt>
            @*@Html.DisplayNameFor(model => model.cantidad)*@Cantidad del producto
        </dt>

        <dd>
            @Html.DisplayFor(model => model.cantidad)
        </dd>

        <dt class="d-none">
            @Html.DisplayNameFor(model => model.bodega.id_bodega)
        </dt>

        <dd class="d-none">
            @Html.DisplayFor(model => model.bodega.id_bodega)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Eliminar" class="btn btn-danger btn-lg input-block-level form-control mb-2" />
                @Html.ActionLink("Salir sin eliminar", "Index", new { area = "" }, new { @class = "btn btn-success btn-lg d-flex justify-content-center" })
            </div>
        </div>

        @*<div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>*@

    }
</div>
