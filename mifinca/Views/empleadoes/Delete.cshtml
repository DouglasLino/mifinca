@model mifinca.Models.empleado

@{
    ViewBag.Title = "Delete";
}

<h2>Eliminar empleado</h2>

<h3>¿Esta seguro eliminar al empleado @Html.DisplayFor(model => model.nombre_empleado)?</h3>
<div>
    <p class="text-danger">La siguiente acción no se puede deshacer </p>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @*@Html.DisplayNameFor(model => model.nombre_empleado)*@ Nombre del empleado
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nombre_empleado)
        </dd>

        <dt>
            @*@Html.DisplayNameFor(model => model.apellido_empleado)*@ Apellido del empleado
        </dt>

        <dd>
            @Html.DisplayFor(model => model.apellido_empleado)
        </dd>

        <dt>
            @*@Html.DisplayNameFor(model => model.direccion_empleado)*@ Dirección del empleado
        </dt>

        <dd>
            @Html.DisplayFor(model => model.direccion_empleado)
        </dd>

        <dt>
            @*@Html.DisplayNameFor(model => model.telefono_empleado)*@ Teléfono personal del empleado
        </dt>

        <dd>
            @Html.DisplayFor(model => model.telefono_empleado)
        </dd>

        <dt>
            @*@Html.DisplayNameFor(model => model.telefonoEmergencia_empleado)*@ Teléfono de emergencia del empleado
        </dt>

        <dd>
            @Html.DisplayFor(model => model.telefonoEmergencia_empleado)
        </dd>

        <dt>
            @*@Html.DisplayNameFor(model => model.qr_empleado)*@ QR del empleado
        </dt>

        <dd>
            @*@Html.DisplayFor(model => model.qr_empleado)*@
            <img src="https://api.qrserver.com/v1/create-qr-code/?data=@Html.DisplayFor(model => model.id_empleado)&amp;size=100x100" class="img-thumbnail" />
        </dd>

        <dt class="d-none">
            @Html.DisplayNameFor(model => model.finca.foto_finca)
        </dt>

        <dd class="d-none">
            @Html.DisplayFor(model => model.finca.foto_finca)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        @*<div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>*@
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Eliminar" class="btn btn-danger btn-lg input-block-level form-control mb-2" />
                @Html.ActionLink("Salir sin eliminar", "Index", new { area = "" }, new { @class = "btn btn-success btn-lg d-flex justify-content-center" })
            </div>
        </div>
    }
</div>
