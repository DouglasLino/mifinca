@model mifinca.Models.empleado
<script>
        
</script>
@{
    ViewBag.Title = "Edit";
}

<h2>Editar empleado</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.id_empleado)



    <div class="form-group mb-3">
        @Html.LabelFor(model => model.finca.nombre_finca, "Nombre de la finca", htmlAttributes: new { @class = "control-label col-md" })
        <div class="col-md-10">
            @* lo muestro pero no se envia *@
            @Html.DropDownList("id_finca", null, htmlAttributes: new { @class = "form-control", @disabled = "disabled" })
            @* no se muestra pero si se envia *@
            @Html.DropDownList("id_finca", null, htmlAttributes: new { @class = "form-control d-none" })
            @Html.ValidationMessageFor(model => model.id_finca, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group mb-3">
        @Html.LabelFor(model => model.nombre_empleado, "Nombre del empleado", htmlAttributes: new { @class = "control-label col-md" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.nombre_empleado, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.nombre_empleado, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group mb-3">
        @Html.LabelFor(model => model.apellido_empleado, "Apellido del empleado", htmlAttributes: new { @class = "control-label col-md" })
