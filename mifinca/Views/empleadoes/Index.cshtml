@model IEnumerable<mifinca.Models.empleado>

@{
    ViewBag.Title = "Index";
}
<style>
    button a {
        color: white;
        text-decoration: none;
    }

        button a:hover {
            color: white;
        }
</style>


<section class="container">
    <div class=" row align-items-center mb-3">
        <h1 class="text-center">Empleados</h1><!--H1 con el titulo-->

        <div class="col-lg-11 col-md-10 col-sm-12">
            <!--Se definen Breakpoints-->
            <div class="input-group">
                <!--Buscador-->
                <span class="input-group-text" id="basic-addon1">Empleado:</span>
                <input type="text" class="form-control" placeholder="Jorge Daniel" aria-label="Username" aria-describedby="basic-addon1">
            </div>
        </div>
        <div class="col-lg-1 col-md-2 col-sm-12">
            <!--Botton de agregar nuevo empleado-->
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#NewEmpleado">@Html.ActionLink("Crear empleado", "Create")</button>
        </div>
    </div>

</section>


