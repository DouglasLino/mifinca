                <th scope="col">Dirección</th>
                <th scope="col">Teléfono celular propio</th>
                <th scope="col">Teléfono celular de emergencia</th>
                <th scope="col">Código QR</th>
                <th scope="col">Finca</th>

            </tr>
        </thead>
