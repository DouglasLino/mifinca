<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>miFincaSV</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar fixed-top navbar-expand-lg bg-light">
        <div class="container">
            <nav class="navbar navbar-expand-lg bg-light">
                <div class="container-fluid">
                    @Html.ActionLink("miFinca", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                    @*<a class="navbar-brand" href="#">Navbar</a>*@
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            <li class="nav-item">
                               @Html.ActionLink("Finca", "Index", "fincas", new { area = "" }, new { @class = "nav-link" })
                            </li>
                            <li class="nav-item">
                               @Html.ActionLink("Finanzas", "Index", "finanzas", new { area = "" }, new { @class = "nav-link" })
                            </li>
                            <li class="nav-item">
                               @Html.ActionLink("Planilla", "Index", "planillas", new { area = "" }, new { @class = "nav-link" })
                            </li>
                            <li class="nav-item">
                               @Html.ActionLink("Empleados", "Index", "empleadoes", new { area = "" }, new { @class = "nav-link" })
                            </li>
                            <li class="nav-item">
                               @Html.ActionLink("Bodega", "Index", "bodegas", new { area = "" }, new { @class = "nav-link" })
                            </li>
                            <li class="nav-item">
                               @Html.ActionLink("Tareas", "Index", "tareas", new { area = "" }, new { @class = "nav-link" })
                            </li>

                        </ul>
                        
                    </div>
                </div>
            </nav>
        </div>
    </div>
    





    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - miFincaSV</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
